<div class='title col-md-12 no-gutters' >
  <h1> <center><span class="label label-default">The Weather Clicker</span></center> </h1>
</div>
<br />
<div class='post-tile col-xs-12 col-sm-6 col-md-6 no-gutters' >
  <h3> Click Anywhere on Planet Earth for the Current Weather</h3>
  <div id="googleMap"></div>
</div>

<div class='post-tile col-xs-12 col-sm-6 col-md-6 no-gutters' >
  <h3> Search for weather by location</h3>
  <div class='row'>
    <div class='col-xs-8'>
      <input class="form-control" id="address" type="textbox" placeholder="Input a city/state">
    </div>
    <div class='col-xs-4'>
      <input type="button" class='btn btn-primary' value="Get Weather" onclick="codeAddress()">
    </div>  
  </div>
  <% latitude, longitude = @ip_info['loc'].split(',') %>
  <% if @ip_info %>
    <br />
    <br />
    <br />
    <div id='weather_div' >
      <iframe id="forecast_embed" type="text/html" frameborder="0" height="245px" width="100%" src="http://forecast.io/embed/#lat=<%= latitude %>&lon=<%= longitude %>&name=<%= @ip_info['city'] %>&color=#A6A6A0&font=Helvetica"> </iframe>
    </div>
  <% end %>
</div>
